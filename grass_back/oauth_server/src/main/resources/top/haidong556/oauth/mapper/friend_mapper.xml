<!-- FriendMapper.xml -->

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.haidong556.oauth.mapper.FriendMapper">
    <select id="getFriend" parameterType="top.haidong556.oauth.entity.Friend" resultType="top.haidong556.oauth.entity.Friend">
        SELECT * FROM t_friends WHERE user_id = #{userId} AND friend_id = #{friendId}
    </select>

    <insert id="addFriend" parameterType="top.haidong556.oauth.entity.Friend">
        INSERT INTO t_friends (user_id, friend_id, friend_name) VALUES (#{userId}, #{friendId}, #{friendName})
    </insert>

    <delete id="deleteFriend" parameterType="top.haidong556.oauth.entity.Friend">
        DELETE FROM t_friends WHERE user_id = #{userId} AND friend_id = #{friendId}
    </delete>

    <select id="getAllFriendsByUserId" parameterType="long" resultType="top.haidong556.oauth.entity.Friend">
        SELECT * FROM t_friends WHERE user_id = #{userId}
    </select>


</mapper>
